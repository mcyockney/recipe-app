    <header class="navbar navbar-fixed-top navbar-default">
      
    <div class="container">
      <%= link_to "my recipes", root_path, class: "btn btn-large btn-success", id: "logo" %>
     <% if logged_in? %>
      <div class='nav-item'>
        <%= link_to new_recipe_path, class: 'btn btn-default btn-warning' do %>
          <i class="glyphicon glyphicon-plus-sign"></i> New Recipe
        <% end %>
      </div>
      <ul class="nav-item">
        <li class="dropdown">
          <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            <%= current_user.chefname %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to 'View profile', current_user %></li>
            <li><%= link_to 'Edit Profile', edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign out', logout_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class='nav-item'>
        <%= link_to 'Sign in', login_path, class: 'btn btn-default btn-success' %>
      </div>
    <% end %>
  </div>
</header>